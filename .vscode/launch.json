{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_project", // Path to your built executable,
            "args": [], // Arguments to pass to the program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path if gdb is elsewhere
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
